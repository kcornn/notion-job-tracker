{
  "manifest_version": 3,
  "name": "Job Application Tracker",
  "version": "1.0",
  "description": "Save job applications to a Notion database",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://jobs.ashbyhq.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}